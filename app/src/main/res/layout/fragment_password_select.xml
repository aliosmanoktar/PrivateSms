<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/hint_color">

    <TextView
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lütfen Şifremek için bir şifre seçiniz" />

    <Button
        android:tag="2"
        android:id="@+id/fragment_password_select.pattern"
        style="@style/PasswordSelectButtonStyle"
        android:text="Pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:tag="3"
        android:id="@+id/fragment_password_select.pin"
        style="@style/PasswordSelectButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pin" />

    <Button
        android:tag="1"
        android:id="@+id/fragment_password_select.fingerprint"
        style="@style/PasswordSelectButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FingerPrint" />
</LinearLayout>