<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hint_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="2"
        android:background="@color/hint_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/fragment_pin_lock.Text"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="50sp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1" />

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_pin_lock.number_1"
                style="@style/PasswordNumberStyle"
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/fragment_pin_lock.number_2"
                style="@style/PasswordNumberStyle"
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/fragment_pin_lock.number_3"
                style="@style/PasswordNumberStyle"
                android:text="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_pin_lock.number_4"
                style="@style/PasswordNumberStyle"
                android:text="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/fragment_pin_lock.number_5"
                style="@style/PasswordNumberStyle"
                android:text="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/fragment_pin_lock.number_6"
                style="@style/PasswordNumberStyle"
                android:text="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_pin_lock.number_7"
                style="@style/PasswordNumberStyle"
                android:text="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/fragment_pin_lock.number_8"
                style="@style/PasswordNumberStyle"
                android:text="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/fragment_pin_lock.number_9"
                style="@style/PasswordNumberStyle"
                android:text="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        android:layout_margin="30dp"
                        android:id="@+id/fragment_pin_lock.save"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/ic_tick"
                        android:background="@drawable/circle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="H,1:1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/fragment_pin_lock.number_0"
                    style="@style/PasswordNumberStyle"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_margin="25dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/fragment_pin_lock.ic_backspace"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_backspace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>